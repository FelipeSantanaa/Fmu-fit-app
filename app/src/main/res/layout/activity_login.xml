    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logo_flamingo"/>

    <LinearLayout
        android:id="@+id/lUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/iconUser"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/icon_perfil"/>

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite seu endereÃ§o de e-mail..."
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lUsername"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iconPassword"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/icon_password"/>

    <EditText
        android:id="@+id/txtChave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua senha..."
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lPassword"
        android:clickable="true"
        android:onClick="chamarTelaCadastro"
        android:text="Primeiro acesso? CADASTRE-SE."
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="ENTRAR"
        android:layout_below="@id/txtCadastrar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"/>


</RelativeLayout>

